{% include 'includes/headerAdmin.twig' %}

<main class="container mt-5 mb-5">
    <div class="row">
        <div class="col-sm">
            <h3 class="text-center text-uppercase fw-bold">Sửa thông tin thể loại</h3>
            <form method="post" action="./category/update">
                <div class="input-group mt-3 mb-3">
                    <span class="input-group-text" id="lblCatId">Mã thể loại</span>
                    <input type="text" readonly class="form-control" name="ma_tloai" value="{{ category.getId() }}">
                </div>

                <div class="input-group mt-3 mb-3">
                    <span class="input-group-text" id="lblCatName">Tên thể loại</span>
                    <input type="text" class="form-control" name="ten_tloai" value="{{ category.getName() }}">
                </div>


                <button type="submit"  class="btn btn-success">Lưu lại</button>
                <a href="./categories" class="btn btn-warning ">Quay lại</a>
            </form>
        </div>
    </div>
</main>

