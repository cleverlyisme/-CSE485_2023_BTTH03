{% include 'includes/headerAdmin.twig' %}

<main class="container mt-5 mb-5">
    <div class="row">
        <div class="col-sm">
            <h3 class="text-center text-uppercase fw-bold">Sửa thông tin tác giả</h3>
            <form action="./author/update" method="post" enctype="multipart/form-data">
                <div class="input-group mt-3 mb-3">
                    <span class="input-group-text" id="lblCatId">Mã tác giả</span>
                    <input type="text" class="form-control" readonly name="ma_tgia" value="{{ author.getId() }}">
                </div>

                <div class="input-group mt-3 mb-3">
                    <span class="input-group-text" id="lblCatName">Tên tác giả</span>
                    <input type="text" class="form-control" name="ten_tgia" value="{{ author.getName() }}">
                </div>

                <div class="input-group mt-3 mb-3 align-items-center flex-nowrap">
                    <span class="input-group-text" id="lblCatName">Hình ảnh</span>
                    <div class="song-img px-5"><img src="./assets/images/authors/{{ author.getImage() }}>">
                    </div>
                </div>

                <div class="input-group mt-3 mb-3">
                    <span class="input-group-text" id="lblCatName">Cập nhật ảnh</span>
                    <input type="file" class="form-control" name="imgUpload" placeholder="Đổi ảnh">
                </div>

                <input type="submit" name="submit" value="Lưu lại" class="btn btn-success">
                <a href="./authors" class="btn btn-warning ">Quay lại</a>
            </form>
        </div>
    </div>
</main>

{% include 'includes/footer.twig' %}